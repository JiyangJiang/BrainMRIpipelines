cd /data3/imaging/UKBB/ukbb_freesurfer/processing/measures

curr_meas=`ls -1d *.area.* | awk "NR==${SGE_TASK_ID}"`

cd ${curr_meas}

cat 1000013.${curr_meas} | awk "NR==1" > ../UKBB.reconall.${curr_meas}

for i in `ls *`
do
        cat ${i} | awk "NR==2" >> ../UKBB.reconall.${curr_meas}
done